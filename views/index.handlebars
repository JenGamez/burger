<img src="/assets/img/burger.png" alt="Burger">


<h1>Eat-Da-Burger</h1>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burg">Burger Name:</label>
    <input type="text" id="burg" name="burger_name">
  </div>

  {{!-- <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured
  </div> --}}

  <button type="submit">Add Burger</button>
</form>

{{!-- <h2>Burgers that are not devoured!</h2> --}}

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{!-- {{> burgers/burger-block devoured=true}} --}}
      <li>
	{{burger_name}}

	<button class="change-devoured" data-id="{{id}}" data-newburger="{{devoured}}">
		{{#if devoured}}DEVOURED!{{else}}NOT DEVOURED!{{/if}}
	</button>

	{{!-- <button class="delete-burger" data-id="{{this.id}}">DELETE!</button> --}}
</li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{!-- {{> burgers/burger-block devoured=false}} --}}
      <li>
	{{burger_name}}

	{{!-- <button class="change-devoured" data-id="{{id}}" data-newburger="{{devoured}}">
		{{#if devoured}}DEVOURED!{{else}}NOT DEVOURED!{{/if}}
	</button> --}}

	<button class="delete-burger" data-id="{{this.id}}">DELETE!</button>
</li>
    {{/if}}
  {{/each}}
</ul>





